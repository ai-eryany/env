{
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  ///////// Font related
  "editor.fontSize": 13, 
  "editor.fontLigatures": true, 
  "editor.fontWeight": "500",
  "editor.fontFamily": "'Monoid Nerd Font'",
  "editor.codeLensFontFamily": "'Monoid Nerd Font'",
  "editor.inlayHints.fontFamily": "'Monoid Nerd Font'",
  "editor.inlineSuggest.fontFamily": "'Monoid Nerd Font'",
  "debug.console.fontFamily": "'Monoid Nerd Font'",
  "scm.inputFontFamily": "'Monoid Nerd Font'",
  "terminal.integrated.fontFamily": "'Monoid Nerd Font'",
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////

  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  ///////// (Fuzzy && search) related
  "search.exclude": {
    "**/.vscode": true,
    "**/*.code-workspace": true,
    "**/dist": true
  },
  "search.quickOpen.includeHistory": false,
  "javascript.preferences.useAliasesForRenames": false,
  "typescript.preferences.useAliasesForRenames": false,
  "editor.quickSuggestions": {
    "other": "off"
  },
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////

  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  ///////// Git related
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////

  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  ///////// Plugins related
  "vim.vimrc.enable": true,
  "advancedNewFile.exclude": {
    "node_modules": true,
    "node_modules_electron": true,
    "dev": true,
    "dist": true
  },
  "advancedNewFile.showInformationMessages": true,
  "advancedNewFile.convenienceOptions": ["last", "current", "root"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////

  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  ///////// (Layout && Theme) related
  "window.customTitleBarVisibility": "windowed",
  "window.commandCenter": false,
  "window.zoomLevel": 1,
  "editor.minimap.enabled": false,
  "editor.folding": false,
  "editor.guides.indentation": false,
  "editor.colorDecorators": false,
  "editor.stickyScroll.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.cursorStyle": "block",
  "editor.stickyScroll.scrollWithEditor": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "top",
  "workbench.tree.enableStickyScroll": false,
  "workbench.startupEditor": "none",
  "editor.mouseWheelZoom": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true
  },
  "debug.console.wordWrap": false,
  "markdown.preview.breaks": true
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////
}
